@model PROYECTO_TP_PNT1.Models.Alojamiento

@{
    ViewData["Title"] = "Create";
}


<div class="row"  id="formulario">
    <h1 class="titulo-cliente">CREAR NUEVO ALOJAMIENTO</h1>
    <hr />
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label"></label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
                <span>
                    @ViewBag.alojamientoExistente
                </span>
            </div>
            <div class="form-group">
                <label asp-for="cantHabitacionesDisponibles" class="control-label"></label>
                <input asp-for="cantHabitacionesDisponibles" class="form-control" min="0" />
                <span asp-validation-for="cantHabitacionesDisponibles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capacidadHabitaciones" class="control-label"></label>
                <input asp-for="capacidadHabitaciones" class="form-control" min="1" />
                <span asp-validation-for="capacidadHabitaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipo" class="control-label"></label>
                <select id="select" asp-for="tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoDeAlojamiento>()">
                    <option selected="selected" value="">Seleccionar alojamiento</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioDesayuno" class="control-label"></label>
                <input asp-for="precioDesayuno" class="form-control" />
                <span asp-validation-for="precioDesayuno" class="text-danger"></span>
            </div>

            <div class="form-group" id="botones-form">
                <input type="submit" value="Crear" id="button1" class="btn btn-success bg-success" />

                <a asp-action="Index" class="btn bg-dark boton-volver">Volver</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
